doctype html
html(lang="en")
	head
		meta(name="viewport", content="width=device-width")
		meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
		title Template Email New User
		link(href="http://fonts.googleapis.com/css?family=Open+Sans", rel="stylesheet", type="text/css")
		link(rel="stylesheet", href="style.css", data-embed)
	body
		// START WRAPPER
		.wrapper-body 
			// Header {Text} {Logo}
			table(width="100%",border="0" cellspacing="0" cellpadding="0")
				tr
					td
						table.wrapper.header(width="100%",border="0" cellspacing="0" cellpadding="0")
							tr
								td 
									p <b>Hey Idam,</b>
								td.pull-right
									img(src="http://pasmandor.com/img/cs/eproc-email-logo.png", alt="logo")
			// Banner {h1 : Welcome} {p : describe}
			table(width="100%",border="0" cellspacing="0" cellpadding="0")
				tr
					td
						table.wrapper.no-gap.banner(width="100%" border="0" cellspacing="0" cellpadding="0")
							tr
								td
									h1 Welcome
									p Eproc is a search engine for public sector bidding contests. We will help you find and bid on tenders in a fast and easy way
			// Content {Thanks : //Thanks} {Button: Confirm}
			table(width="100%",border="0" cellspacing="0" cellpadding="0")
				tr
					td
						table.wrapper.content(width="100%" border="0" cellspacing="0" cellpadding="0")
							tr
								td 
									// Thanks Content
									p.bold Thanks for signing up to Eproc, great to you have you on board for the beta!
									p For complete your sign up has been registered please confirm your email address by clicking button bellow :
									// Button Confirm
									p.btn-wrapper
										a Confirm Your Account
									p also here is <a href="#">quick video</a>  to help you getting started
									p If you got any problem, you could contact customer service at <a href="#">help@eproc.asia</a>
									.divider-dash
									p
										img(src="http://pasmandor.com/img/cs/eproc-grey.png", alt="logo")
									.flex
										.flex-60.address
											p Grand ITC Permata Hijau Blok Ruby no. 9
											p Jalan Letjen Soepono, Jakarta 12210
										.flex-40.google-play
											a(href="")
												img(src="http://pasmandor.com/img/cs/android-logo.png", alt="logo-playstore")
										.cleafix
			// Before Footer {Terms & Policy list} {Button Social Media}
			table(width="100%",border="0" cellspacing="0" cellpadding="0")
				tr
					td
						table.wrapper.divider(width="100%" border="0" cellspacing="0" cellpadding="0")
							tr
								td.divider-wrapper
									// START Icon Media Social
									.term-policies.flex-70
										table
											tr
												td 
													a(href="") Term & Conditions
												td 
													a(href="") Privacy Policy
												td 
													a(href="") FAQ
									.social.flex-30
										table
											tr
												td.media-social-icon
													a(href="")
														img(src="http://pasmandor.com/img/cs/soc-med-icn-03-darker.png", alt="icon-facebook")
												td.media-social-icon
													a(href="")
														img(src="http://pasmandor.com/img/cs/soc-med-icn-04-darker.png", alt="icon-facebook") 
												td.media-social-icon
													a(href="")
														img(src="http://pasmandor.com/img/cs/soc-med-icn-05-darker.png", alt="icon-facebook")
									.clearfix
			// Footer {Terms & Policy list} 
			table(width="100%",border="0" cellspacing="0" cellpadding="0")
				tr
					td
						table.wrapper.footer(width="100%" border="0" cellspacing="0" cellpadding="0")
							tr
								// Footer
								td 
									p &copy; 2016 Eproc All Right Reserved
									